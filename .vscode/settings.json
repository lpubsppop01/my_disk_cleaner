{
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "cSpell.words": [
        "columnspan",
        "hardlink",
        "highlightthickness",
        "LOCALAPPDATA",
        "ollama",
        "padx",
        "pady",
        "scrollregion",
        "selectmode",
        "tkinter",
        "xscrollcommand"
    ]
}